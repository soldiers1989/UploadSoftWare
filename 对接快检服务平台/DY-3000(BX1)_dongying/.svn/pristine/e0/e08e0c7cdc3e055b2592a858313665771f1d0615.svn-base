<Window x:Class="AIO.TaskDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TaskDisplay" 
        Width="1024" Height="768"
        WindowState="Maximized"
        WindowStyle="None"
        Background="{StaticResource BackGroudColorGrid}"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <!-- 上 -->
        <Grid Margin="0,0,0,0" Height="150" VerticalAlignment="Top" Background="{StaticResource  BackGroudColorGridTop}" >
            <Image Width="150" Height="110" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/DY-Detector;component/assets/logo_kjfw.png" Margin="15,20" />
            <Label Content="任务查看" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource ForeGroudColorText}"/>
            <Label Content="信息:" FontSize="20" Foreground="{StaticResource ForeGroudColorText}" HorizontalAlignment="Right" Name="LabelInfo" VerticalAlignment="Bottom" Width="177" Margin="0,0,6,0" />
        </Grid>

        <!-- 下 -->
        <Grid Margin="0,0,0,0" Height="100" VerticalAlignment="Bottom" Background="{StaticResource  BackGroudColorGridBottom}" >
            <Button Name="ButtonPrev" Width="100" Height="60" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="20,0,20,0"  Content="返  回" FontSize="24" Click="ButtonPrev_Click"/>
            <Button Content="任务更新" FontSize="24" Height="60" HorizontalAlignment="Left" Margin="20,20,0,20" Name="btnTaskUpdate" VerticalAlignment="Center" Width="100" Click="btnTaskUpdate_Click" />
            <Button Content="查看详细" FontSize="24" Height="60" HorizontalAlignment="Left" Margin="126,20,0,20" Name="btnViewDetailed" VerticalAlignment="Center" Width="100" Click="btnViewDetailed_Click" />
            <Button Content="清空任务" FontSize="24" Height="60" HorizontalAlignment="Left" Margin="232,20,0,20" Name="btnDeleted" VerticalAlignment="Center" Width="100" Click="btnDeleted_Click" />
        </Grid>

        <Grid Margin="0,150,0,100" Background="{StaticResource BackGroudColorGridCenter}">
            <DataGrid AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding}" Name="DataGridRecord" LoadingRow="DataGridRecord_LoadingRow" MouseDoubleClick="DataGridRecord_MouseDoubleClick" FontSize="16">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=CPCODE}" Header="任务编号" Visibility="Collapsed"/>
                    <DataGridTextColumn Binding="{Binding Path=CPTITLE}" Header="任务主题" />
                    <DataGridTextColumn Binding="{Binding Path=CPSDATE}" Header="起始日期" />
                    <DataGridTextColumn Binding="{Binding Path=CPEDATE}" Header="结束日期" />
                    <DataGridTextColumn Binding="{Binding Path=CPTPROPERTY}" Header="任务性质" Visibility="Collapsed" />
                    <DataGridTextColumn Binding="{Binding Path=CPFROM}" Header="任务来源" Visibility="Collapsed" />
                    <DataGridTextColumn Binding="{Binding Path=CPEDITOR}" Header="编制人" />
                    <DataGridTextColumn Binding="{Binding Path=CPPORGID}" Header="机构编码" Visibility="Collapsed" />
                    <DataGridTextColumn Binding="{Binding Path=CPPORG}" Header="机构名称" Visibility="Collapsed" />
                    <DataGridTextColumn Binding="{Binding Path=CPEDDATE}" Header="编制日期" Visibility="Hidden" />
                    <DataGridTextColumn Binding="{Binding Path=CPMEMO}" Header="备注" Visibility="Hidden" />
                    <DataGridTextColumn Binding="{Binding Path=PLANDETAIL}" Header="任务详细内容" Width="200"/>
                    <DataGridTextColumn Binding="{Binding Path=PLANDCOUNT}" Header="计划抽检数量" />
                    <DataGridTextColumn Binding="{Binding Path=CompleteNum}" Header="完成批次" />
                    <DataGridTextColumn Binding="{Binding Path=CompleteProgress}" Header="完成进度" />
                    <DataGridTextColumn Binding="{Binding Path=CompleteState}" Header="完成状态" Visibility="Collapsed"/>
                    <DataGridTextColumn Binding="{Binding Path=BAOJINGTIME}" Header="报警时间" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
