<Window x:Class="AIO.FgdShowADWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FgdShowADWindow"
        Width="1024" Height="768"
        WindowState="Maximized"
        WindowStyle="None"
        Background="{StaticResource BackGroudColorGrid}"
        FontFamily="SimHei" 
        Loaded="Window_Loaded" Closing="Window_Closing" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" >
    <Grid>
        <!-- 上 -->
        <Grid Margin="0,0,0,0" Height="150" VerticalAlignment="Top" Background="{StaticResource  BackGroudColorGridTop}" >
            <Image Width="150" Height="110" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/DY-Detector;component/assets/logo_kjfw.png" Margin="15,20" />
            <Label Content="分光光度显示AD界面" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource ForeGroudColorText}"/>
        </Grid>

        <!-- 下 -->
        <Grid Margin="0,0,0,0" Height="100" VerticalAlignment="Bottom" Background="{StaticResource  BackGroudColorGridBottom}" >
            <Button Name="ButtonPrev" Width="100" Height="60" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="20,0,20,0"  Content="返  回" FontSize="24" Click="ButtonPrev_Click"/>
        </Grid>

        <!-- 中 -->
        <Grid Margin="0,150,0,100" Background="{StaticResource BackGroudColorGridCenter}">
            <StackPanel Width="800" Height="350" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                <StackPanel Width="800" Height="40" Orientation="Horizontal">
                    <Label Width="100" Content="通道\波长" FontSize="20" />
                    <Label Width="100" Content="1" FontSize="20" />
                    <Label Width="100" Content="2" FontSize="20"  />
                    <Label Width="100" Content="3" FontSize="20"  />
                    <Label Width="100" Content="4" FontSize="20" />
                    <Label Width="100" Content="暗电流" FontSize="20" Visibility="Collapsed" />
                </StackPanel>
                <ScrollViewer Width="800" Height="300" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <StackPanel Name="StackPanelShowAD" Width="725" Orientation="Vertical" Margin="0,0,0,40" >

                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
