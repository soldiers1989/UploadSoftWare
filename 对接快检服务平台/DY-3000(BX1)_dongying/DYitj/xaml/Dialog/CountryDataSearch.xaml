<Window x:Class="AIO.xaml.Dialog.CountryDataSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" 
        Background="{StaticResource BackGroudColorGrid}"
        WindowState="Maximized"
        WindowStyle="None"
        Width="1024" 
        Height="768"
        FontFamily="SimHei" Loaded="Window_Loaded">
    <Grid>

        <!-- 上 -->
        <Grid Margin="0,0,0,0" Height="150" VerticalAlignment="Top" Background="{StaticResource  BackGroudColorGridTop}" >
            <Image Width="150" Height="110" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/DY-Detector;component/assets/logo_kjfw.png" Margin="15,20" />
            <Label Content="国家局数据查询系统" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource ForeGroudColorText}"/>
            <Label Name="Lb_Update" Visibility="Collapsed" Content="正在获取更新数据，请稍等···" FontSize="20" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="313"/>
        </Grid>

        <!-- 下 -->
        <Grid Margin="0,0,0,0" Height="100" VerticalAlignment="Bottom" Background="{StaticResource  BackGroudColorGridBottom}" >
            <Button Name="ButtonPrev" Width="100" Height="60" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,20,20,20"  Content="返  回" FontSize="24" Click="ButtonPrev_Click"/>
            <Button Name="Btn_Show" Width="100" Height="60" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,20,0,20"  Content="查看详情" FontSize="24" Click="Show_Click"/>
        </Grid>

        <Grid Margin="0,150,0,100" Background="{StaticResource BackGroudColorGridCenter}">
            <StackPanel Width="1024" Height="520" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Margin="-11,-6,-11,-4">
                <StackPanel Width="1000" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical" Margin="12,0" Height="100">
                    <Grid Width="1000" Height="57">
                        <Label FontSize="16" Content="关键字" Height="30" HorizontalAlignment="Left" Margin="0,14,0,0" VerticalAlignment="Top"/>
                        <TextBox Name="TxtName" Width="165" FontSize="16" Height="24" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="63,16,0,17" />
                        <Button Content="查询" FontSize="18" x:Name="Btn_Search" Click="Btn_Search_Click" Margin="252,14,0,0" HorizontalAlignment="Left" Width="75" Height="26" VerticalAlignment="Top" />
                        <CheckBox Name="CboxGCYP" Content="国产药品" FontSize="16" IsChecked="false" Click="CboxGCYP_Click" HorizontalAlignment="Left" Margin="347,23,0,0" VerticalAlignment="Top"/>
                        <CheckBox Name="CboxJKYP" Content="进口药品" FontSize="16" Click="CboxJKYP_Click" HorizontalAlignment="Left" Margin="436,23,0,0" VerticalAlignment="Top"/>
                        <CheckBox Name="CboxGCBJSP" Content="国产保健食品" FontSize="16" Click="CboxGCBJSP_Click" HorizontalAlignment="Left" Margin="526,23,0,0" VerticalAlignment="Top"/>
                        <CheckBox Name="CboxJKBJSP" Content="进口保健食品" FontSize="16" Click="CboxJKBJSP_Click" HorizontalAlignment="Left" Margin="647,23,0,0" VerticalAlignment="Top"/>
                        <CheckBox Name="CboxGCHZP" Content="国产化妆品" FontSize="16" Click="CboxGCHZP_Click" HorizontalAlignment="Left" Margin="768,23,0,0" VerticalAlignment="Top"/>
                        <CheckBox Name="CboxJKHZP" Content="进口化妆品" FontSize="16" Click="CboxJKHZP_Click" HorizontalAlignment="Left" Margin="873,23,0,0" VerticalAlignment="Top"/>
                        <CheckBox x:Name="CboxHGSP" Content="食品抽检(合格)" FontSize="16" IsChecked="true" Click="CboxHGSP_Click" HorizontalAlignment="Left" Margin="215,68,0,-28" VerticalAlignment="Top"/>
                        <CheckBox x:Name="CboxBHGSP" Content="食品抽检(不合格)" FontSize="16" IsChecked="false" Click="CboxBHGSP_Click" HorizontalAlignment="Left" Margin="352,68,0,-28" VerticalAlignment="Top"/>
                        <CheckBox x:Name="CboxQC" Content="食品生产许可证获证企业(QS)" FontSize="16" IsChecked="false" Click="CboxQC_Click" HorizontalAlignment="Left" Margin="505,68,0,-28" VerticalAlignment="Top"/>
                        <CheckBox x:Name="CboxSC" Content="食品生产许可证获证企业(SC)" FontSize="16" IsChecked="false" Click="CboxSC_Click" HorizontalAlignment="Left" Margin="755,68,0,-28" VerticalAlignment="Top"/>
                    </Grid>
                </StackPanel>
                <DataGrid Name="DataGridRecord" Width="1000" Height="380" ItemsSource="{Binding}" AutoGenerateColumns="false" IsReadOnly="True" MouseDoubleClick="DataGridRecord_MouseDoubleClick" SelectionChanged="DataGridRecord_SelectionChanged" LoadingRow="DataGridRecord_LoadingRow" FontSize="16" Margin="12,0" >
                    <DataGrid.ContextMenu>
                        <ContextMenu Name="DataGridMenu" StaysOpen="true">
                            <MenuItem Name="miShow" Click="Show_Click" Header="查看详情"/>
                            <!--<MenuItem Name="miExport" Click="miExport_Click" Header="导出检测标准"/>-->
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="COUNT" Binding="{Binding Path = COUNT}" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="ID" Binding="{Binding Path = ID}" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="内容列表" Binding="{Binding Path = CONTENT}" Width="950"/>
                    </DataGrid.Columns>
                </DataGrid>
                <WrapPanel Height="27" Name="wrapPanel1" Margin="12,0">
                    <!--<Button Content="首页" FontSize="18" Height="26" Name="btnHomePage" Width="75" Click="btnHomePage_Click" />-->
                    <!--<Label Content="" Height="28" Name="label5" Width="10" />-->
                    <!--<Button Content="末页" FontSize="18" Height="26" Name="btnEndPage" Width="75" Click="btnEndPage_Click" />-->
                    <!--<Label Content="" Height="28" Name="label4" Width="15" />-->
                    <Button Content="上一页" FontSize="18" Height="26" Name="btnUpPage" Width="75" Click="btnUpPage_Click" />
                    <Label Content="" Height="28" Name="label1" Width="10" />
                    <Button Content="下一页" FontSize="18" Height="26" Name="btnNextPage" Width="75" Click="btnNextPage_Click" />
                    <Label Content=" 跳转到第" FontSize="18" Height="28" Name="label2" Width="90" />
                    <TextBox Height="23" Text="1" Name="textBoxPage" FontSize="18" Width="32" TextChanged="textBoxPage_TextChanged" />
                    <Label Content="页 每页" FontSize="18" Height="28" Name="label3" Width="70" />
                    <TextBox Text="100" Height="23" Name="TxtPageSize" FontSize="18" Width="60" TextChanged="TxtPageSize_TextChanged" />
                    <Label Content="条数据" Height="28" FontSize="18" Width="65" />
                    <!--<Label Height="28" FontSize="18" Name="labelCount" Width="348" />-->
                </WrapPanel>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
