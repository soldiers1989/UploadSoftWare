<Window x:Class="AIO.xaml.Dialog.SearchFoodTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mode="clr-namespace:AIO.xaml.Dialog"
        Title="种类查询" Height="400" Width="500" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <Grid.Resources>
            <HierarchicalDataTemplate DataType="{x:Type mode:FoodType}" ItemsSource="{Binding FoodTypes}">
                <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                    <TextBlock Text="{Binding name}" ToolTip="{Binding name}" Tag="{Binding}"/>
                </StackPanel>
            </HierarchicalDataTemplate>
        </Grid.Resources>
        <TreeView Name="treeView" SelectedItemChanged="treeView_SelectedItemChanged" Margin="0,0,0,45" />
        <Button Content="选择" Name="Btn_Selected" HorizontalAlignment="Left" Width="93" Margin="67,331,0,10" Click="Btn_Selected_Click"/>
        <Button Content="关闭" Name="Btn_Closed" HorizontalAlignment="Left" Width="93" Margin="338,331,0,10" Click="Btn_Closed_Click"/>

    </Grid>
</Window>