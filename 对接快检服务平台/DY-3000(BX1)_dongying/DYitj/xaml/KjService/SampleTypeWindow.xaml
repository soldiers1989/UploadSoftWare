<Window x:Class="AIO.xaml.KjService.SampleTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SampleTypeWindow" Width="1024" Height="768"
        WindowState="Maximized"
        WindowStyle="None"
        Background="{StaticResource BackGroudColorGrid}"
        FontFamily="SimHei" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Loaded="Window_Loaded"
        
        >
    <Grid>
        <!-- 上 -->
        <Grid Margin="0,0,0,0" Height="150" VerticalAlignment="Top" Background="{StaticResource  BackGroudColorGridTop}" >
            <Image Width="150" Height="110" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/DY-Detector;component/assets/logo_kjfw.png" Margin="15,20" />
            <Label Content="样品种类查看" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource ForeGroudColorText}"/>
            <Label Content="" FontSize="20" Foreground="{StaticResource ForeGroudColorText}" HorizontalAlignment="Right" x:Name="LabelInfo" VerticalAlignment="Bottom" Width="200" Margin="0,0,6,0" />
        </Grid>

        <!-- 下 -->
        <Grid Margin="0,0,0,0" Height="100" VerticalAlignment="Bottom" Background="{StaticResource  BackGroudColorGridBottom}" >
            <Button Name="Btn_Refresh" Height="60" VerticalAlignment="Center" Margin="20,20,0,20" Content="更  新" FontSize="24" Click="Btn_Refresh_Click" HorizontalAlignment="Left" Width="100" />
            <Button Name="Btn_ReUpdate" Height="60" VerticalAlignment="Center" Margin="125,20,0,20" Content="重 置" FontSize="24" Click="Btn_ReUpdate_Click" HorizontalAlignment="Left" Width="100" />
            <Button Name="Btn_Exit" Width="100" Height="60" VerticalAlignment="Center" Content="返  回"  HorizontalAlignment="Right" FontSize="24" Click="Btn_Exit_Click" Margin="0,20,10,20" />
        </Grid>

        <!-- 中 -->
        <Grid Margin="0,150,0,100" Background="{StaticResource BackGroudColorGridCenter}">
            <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                <StackPanel VerticalAlignment="Center" Orientation="Vertical" Margin="12,0" Height="36">
                    <Grid Height="35">
                        <StackPanel Width="1000" Height="30"  Margin="110,2,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" >
                            <StackPanel Height="30"  HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" >
                                <Label FontSize="16" Content="样品名称" Height="30" VerticalContentAlignment="Center" />
                                <TextBox Name="Txt_name" Width="135" FontSize="16" Height="25" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" />
                            </StackPanel>
                            <StackPanel Height="30"  Margin="10,0,0,0" Orientation="Horizontal" >
                                <Button Name="BtnSearch" Width="90" Content="查询" FontSize="18" Click="BtnSearch_Click"></Button>
                            </StackPanel>
                           
                            <StackPanel Height="30"  Margin="10,0,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" />
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <DataGrid Name="DataGridRecord" Width="790"  ItemsSource="{Binding}" AutoGenerateColumns="false" IsReadOnly="True" Height="449"  FontSize="16" LoadingRow="DataGridRecord_LoadingRow">
                    <DataGrid.ContextMenu>
                        <ContextMenu Name="DataGridMenu" StaysOpen="true">
                            <!--<MenuItem Name="miUpload" Header="修改" />
                            <MenuItem Name="miDelete" Header="删除" />-->
                            <!--<MenuItem Name="miSave"  Header="保存" Click="miSave_Click"/>-->
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Path=ID}" Header="ID" Visibility="Collapsed"/>
                        <!--样品信息-->
                        <DataGridTextColumn Binding="{Binding Path=food_name}" Header="样品名称" Width="150"/>
                        <DataGridTextColumn Binding="{Binding Path=fid}" Header="样品编号" Width="150"/>
                        <DataGridTextColumn Binding="{Binding Path=Name}" Header="项目名称" Width="150" Visibility="Collapsed"/>
                        <DataGridTextColumn Binding="{Binding Path=parent_id}" Header="父类编号" Width="150"/>
                        <DataGridTextColumn Binding="{Binding Path=update_date}" Header="更新时间" Width="105"/>
                        <DataGridTextColumn Binding="{Binding Path=StandardValue}" Header="标准值" Width="105" Visibility="Collapsed"/>
                        <DataGridTextColumn Binding="{Binding Path=Unit}" Header="单位" Width="125" Visibility="Collapsed"/>
                    </DataGrid.Columns>
                </DataGrid>

            </StackPanel>
        </Grid>

    </Grid>
</Window>
