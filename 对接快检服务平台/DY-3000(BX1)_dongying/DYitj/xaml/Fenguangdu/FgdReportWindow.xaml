<Window x:Class="AIO.FgdReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FgdReportWindow" Width="1024" Height="768"
        WindowState="Maximized"
        WindowStyle="None"
        Background="RoyalBlue"
        FontFamily="SimHei" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" 
        Loaded="Window_Loaded" Closing="Window_Closing" 
        Icon="/DY-Detector;component/assets/app_icon.ico">
    <!--Topmost="True" WindowState="Maximized"-->
    <Grid>
        <!-- 上 -->
        <Grid Margin="0,0,0,0" Height="150" VerticalAlignment="Top" Background="{StaticResource  BackGroudColorGridTop}" >
            <Image Width="150" Height="110" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/DY-Detector;component/assets/logo_kjfw.png" Margin="15,20" />
            <Label Content="检测结果" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource ForeGroudColorText}"/>
            <Label Content="" FontSize="20" Foreground="{StaticResource ForeGroudColorText}" HorizontalAlignment="Right" Name="LabelInfo" VerticalAlignment="Bottom" Width="320" Margin="0,0,10,107" HorizontalContentAlignment="Right" />
            <Label Content="2015-6-7 14:57:47" Name="LabelDate" FontSize="20" HorizontalAlignment="Center" Foreground="{StaticResource ForeGroudColorText}" VerticalContentAlignment="Bottom" />
            <Label Content="对照值:" FontSize="20" Foreground="{StaticResource ForeGroudColorText}" HorizontalAlignment="Right" Margin="0,0,10,0" Name="label1" VerticalAlignment="Bottom" Width="200" HorizontalContentAlignment="Right" />
        </Grid>

        <!-- 下 -->
        <Grid Margin="0,0,0,0" Height="100" VerticalAlignment="Bottom" Background="{StaticResource  BackGroudColorGridBottom}" >
            <Button Name="ButtonPrint" Width="100" Height="60" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,20,0,20"  Content="打  印" FontSize="24" Click="ButtonPrint_Click" IsEnabled="False"/>
            <Button Name="ButtonPrev" Width="100" Height="60" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,20,20,20"  Content="返  回" FontSize="24" Click="ButtonPrev_Click" IsEnabled="False"/>
            <Button Content="上  传" IsEnabled="False" FontSize="24" Height="60" HorizontalAlignment="Left" Margin="126,20,0,20" Name="ButtonUpdate" VerticalAlignment="Center" Width="100" Click="ButtonUpdate_Click" />
            <Button Content="查询数据" ToolTip="点击查看当前检测项目对应的检测数据！" FontSize="24" Height="60" HorizontalAlignment="Left" Margin="231,20,0,20" x:Name="Btn_ShowDatas" VerticalAlignment="Center" Width="100" Click="Btn_ShowDatas_Click" IsEnabled="False"/>
        </Grid>

        <!-- 中 -->
        <Grid Margin="0,150,0,86" Background="{StaticResource BackGroudColorGridCenter}">
            <StackPanel Width="1024" Height="500" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                <StackPanel Width="800" Height="40" Orientation="Horizontal">
                    <Label Width="50" Content="通道" FontSize="20" HorizontalContentAlignment="Center" />
                    <Label Width="88" Content="样品编号" FontSize="20" HorizontalContentAlignment="Center" />
                    <Label Width="170" Content="样 品 名 称" FontSize="20" HorizontalContentAlignment="Center" />
                    <Label Width="88" Content="检测结果" FontSize="20" HorizontalContentAlignment="Center" />
                    <Label Width="88" Content="检测单位" FontSize="20" HorizontalContentAlignment="Center" />
                    <Label Width="88" Content="判断结果" FontSize="20" HorizontalContentAlignment="Center" />
                    <Label Width="100" Content="判定标准" FontSize="20" HorizontalContentAlignment="Center" />
                    <Label Width="80" Content="标准值" FontSize="20" HorizontalContentAlignment="Center" />
                </StackPanel>
                <!--<StackPanel Name="StackPanelReport" Width="760" Orientation="Vertical"></StackPanel>
                <ScrollViewer Width="760" Height="350" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto"></ScrollViewer>-->
                <ScrollViewer Width="800" Height="460" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                    <ScrollViewer.Resources>
                        <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">40</sys:Double>
                        <sys:Double x:Key="{x:Static SystemParameters.HorizontalScrollBarHeightKey}">40</sys:Double>
                    </ScrollViewer.Resources>
                    <WrapPanel Margin="0" Name="StackPanelReport" Width="780">
                    </WrapPanel>
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </Grid>
</Window>