<Window x:Class="AIO.LoginNameEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginNameEdit" 
        Width="1024" Height="768"
        WindowState="Maximized"
        WindowStyle="None"
        Background="{StaticResource BackGroudColorGridCenter}"
        FontFamily="SimHei" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" >
    <Grid>
        <!-- 上 -->
        <Grid Margin="0,0,0,0" Height="150" VerticalAlignment="Top" Background="{StaticResource  BackGroudColorGridTop}" >
            <Image Width="150" Height="110" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/DY-Detector;component/assets/logo_kjfw.png" Margin="15,20" />
            <Label Name="lb_title" Content="编辑用户" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource ForeGroudColorText}"/>
        </Grid>

        <!-- 下 -->
        <Grid Margin="0,0,0,0" Height="100" VerticalAlignment="Bottom" Background="{StaticResource  BackGroudColorGridBottom}" >
            <Button Name="ButtonPrev" Width="100" Height="60" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0" Content="返  回" FontSize="24" Click="ButtonPrev_Click"/>
            <Button Name="ButtonNext" Width="100" Height="60" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,126,0"  Content="保  存" FontSize="24" Click="ButtonNext_Click" />
        </Grid>

        <!-- 中 -->
        <Grid Margin="0,150,0,100" Background="{StaticResource BackGroudColorGridCenter}">
            <StackPanel Width="724" Height="350" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                <ScrollViewer Width="724" Height="350" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                    <ScrollViewer.Resources>
                        <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">40</sys:Double>
                        <sys:Double x:Key="{x:Static SystemParameters.HorizontalScrollBarHeightKey}">40</sys:Double>
                    </ScrollViewer.Resources>
                    <Grid Name="gridMeausre">
                        <StackPanel Width="450" Margin="0,0,0,0" Orientation="Vertical" HorizontalAlignment="Left">
                            <Grid Height="40" Width="450" VerticalAlignment="Top" HorizontalAlignment="Center">
                                <Label  Width="100"  Margin="0,0,0,0" FontSize="20" Content="用户名:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <TextBox Name="TextBoxName" Width="120"  Margin="100,0,0,0" FontSize="20" Text="" VerticalAlignment="Center" HorizontalAlignment="Left" TextChanged="TextBoxName_TextChanged" />
                                <Label  Width="60"  Margin="240,0,0,0" FontSize="20" Content="密码:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <TextBox Name="TextBoxPassword" InputMethod.IsInputMethodEnabled="False" Width="120"  Margin="300,0,0,0" FontSize="20" Text="" VerticalAlignment="Center" HorizontalAlignment="Left" TextChanged="TextBoxPassword_TextChanged" />
                            </Grid>
                            <Grid Height="40" Width="450" VerticalAlignment="Top" HorizontalAlignment="Center">
                                <Label FontSize="20" Content="分光光度模块" VerticalAlignment="Center" Margin="0,4" HorizontalAlignment="Left" Width="140" />
                                <CheckBox  Name="fengguang" Width="20" FontSize="20" Margin="286,15,0,6" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" />
                            </Grid>
                            <Grid Height="40" Width="450" VerticalAlignment="Top" HorizontalAlignment="Center" Name="GridJtj">
                                <Label FontSize="20" Content="胶体金模块" VerticalAlignment="Center" Margin="0,4" HorizontalAlignment="Left" Width="140" />
                                <CheckBox  Name="jiaotijin" Width="20" FontSize="20" Margin="286,17,0,6" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" />
                            </Grid>
                            <StackPanel Orientation="Horizontal" Name="skpGhx">
                                <Label FontSize="20" Content="干化学模块" VerticalAlignment="Center" Margin="0,4" HorizontalAlignment="Left" Width="140" />
                                <CheckBox  Name="ganhuaxue" Width="20" FontSize="20" Margin="146,15,0,13" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" />
                            </StackPanel>
                            <StackPanel Height="210" Width="450" VerticalAlignment="Top" HorizontalAlignment="Center" Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" Name="skpZjs">
                                    <Label FontSize="20" Content="重金属模块" VerticalAlignment="Center" Margin="0,4" HorizontalAlignment="Left" Width="140" />
                                    <CheckBox  Name="zhongjinshu" Width="20" FontSize="20" Margin="146,15,0,13" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Name="skpWsw">
                                    <Label FontSize="20" Name="Lb_WswOrATP" Content="微生物模块" VerticalAlignment="Center" Margin="0,4" HorizontalAlignment="Left" Width="140" />
                                    <CheckBox  Name="checkBoxMicrobial" Width="20" FontSize="20" Margin="146,15,0,13" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Name="skpBcsp">
                                    <Label FontSize="20" Name="Lb_Bcsp" Content="薄层色谱模块" VerticalAlignment="Center" Margin="0,4" HorizontalAlignment="Left" Width="140" />
                                    <CheckBox  Name="checkBoxBcsp" Width="20" FontSize="20" Margin="146,15,0,13" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Name="skpYgmy">
                                    <Label FontSize="20" Name="Lb_Ygmy" Content="荧光免疫模块" VerticalAlignment="Center" Margin="0,4" HorizontalAlignment="Left" Width="140" />
                                    <CheckBox  Name="checkBoxYgmy" Width="20" FontSize="20" Margin="146,15,0,13" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Name="skpSyxwsw">
                                    <Label FontSize="20" Name="Lb_Syxwsw" Content="食源性微生物" VerticalAlignment="Center" Margin="0,4" HorizontalAlignment="Left" Width="140" />
                                    <CheckBox  Name="checkBoxSyxwsw" Width="20" FontSize="20" Margin="146,15,0,13" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label FontSize="20" Content="强制上传" VerticalAlignment="Center" Margin="0,4" HorizontalAlignment="Left" Width="140" />
                                    <CheckBox  Name="qiangzhi" Width="20" FontSize="20" Margin="146,15,0,13" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label FontSize="20" Content="管理权限" VerticalAlignment="Center" Margin="0,4" HorizontalAlignment="Left" Width="140" />
                                    <CheckBox  Name="guanliquanxian" Width="20" FontSize="20" Margin="146,15,0,13" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

