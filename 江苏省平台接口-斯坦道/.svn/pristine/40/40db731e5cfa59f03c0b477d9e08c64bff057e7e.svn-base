<Window x:Class="AIO.xaml.Print.UpdateReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="UpdateReportWindow" 
        Width="1024" Height="1000"
        WindowState="Maximized"
        WindowStyle="None"
        Background="{StaticResource BackGroudColorGridCenter}"
        FontFamily="SimHei"         
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" >
    <Grid>
        <!-- 上 -->
        <Grid Margin="0,0,0,0" Height="150" VerticalAlignment="Top" Background="{StaticResource  BackGroudColorGridTop}" >
            <Image Width="150" Height="110" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/DY-Detector;component/assets/logo_v.png" Margin="15,20" />
            <Label Content="编辑报表" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource ForeGroudColorText}"/>
        </Grid>

        <!-- 下 -->
        <Grid Margin="0,0,0,0" Height="100" VerticalAlignment="Bottom" Background="{StaticResource  BackGroudColorGridBottom}" >
            <Button Name="ButtonPrev" Width="100" Height="60" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,20,20,20"  Content="返  回" FontSize="24" Click="ButtonPrev_Click"/>
            <Button Content="保  存" FontSize="24" Height="60" HorizontalAlignment="Right" Margin="0,20,126,20" Name="btnSave" VerticalAlignment="Center" Width="100" Click="btnSave_Click" />
        </Grid>

        <!-- 中 -->
        <StackPanel Margin="0,150,0,100" Background="{StaticResource BackGroudColorGridCenter}" HorizontalAlignment="Center" VerticalAlignment="Center"  Orientation="Horizontal" >
            <ScrollViewer Width="815" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Height="350">
                <StackPanel Orientation="Vertical" Width="800">
                    <StackPanel Width="800" Height="37" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Width="100" Height="0" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="16" FlowDirection="LeftToRight" HorizontalContentAlignment="Right" />
                        <TextBox Width="600" Height="34" Text="食品药品检验中心食品安全检验报告"  Name="textBoxTitle" ToolTip="在此输入报表标题名称" TextAlignment="Center" FontSize="24"></TextBox>
                    </StackPanel>
                    <StackPanel Width="800" Height="37" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    </StackPanel>
                    <StackPanel Width="800" Height="37" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Width="125" Height="34" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" Content="检测单位:" FontSize="16" FlowDirection="LeftToRight" HorizontalContentAlignment="Right" />
                        <TextBox Height="34" Name="textBoxCheckUnitName" Width="280" FontSize="20" VerticalAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" />
                        <Label Content="检测依据:" FontSize="16" Height="35" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Width="110" />
                        <TextBox FontSize="20" Height="34" IsEnabled="False" Name="textBoxStandard" VerticalContentAlignment="Center" Width="280" />
                    </StackPanel>
                    <StackPanel Width="800" Height="37" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="被检单位:" FontSize="16" Height="35" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Width="125" />
                        <TextBox FontSize="20" Height="34" Name="textBoxCheckedCompanyName" VerticalContentAlignment="Center" Width="280" IsEnabled="False" />
                        <Label Content="联系方式:" FontSize="16" Height="35" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Width="110" />
                        <TextBox FontSize="20" Height="34" Name="textBoxCheckedCompanyPhone" VerticalContentAlignment="Center" Width="280" IsEnabled="True" TextChanged="textBoxCheckedCompanyPhone_TextChanged" />
                    </StackPanel>
                    <StackPanel Width="800" Height="37" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="生产单位:" FontSize="16" Height="35" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Width="125" />
                        <TextBox FontSize="20" Height="34" Name="textBoxProductionUnitsName" VerticalContentAlignment="Center" Width="280" />
                        <Label Content="联系方式:" FontSize="16" Height="35" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Width="110" />
                        <TextBox FontSize="20" Height="34" Name="textBoxProductionUnitsPhone" VerticalContentAlignment="Center" Width="280" TextChanged="textBoxProductionUnitsPhone_TextChanged" />
                    </StackPanel>
                    <StackPanel Width="800" Height="37" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="质量等级:" FontSize="16" Height="35" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Width="125" />
                        <TextBox FontSize="20" Height="34" Name="textBoxQualityGrade" VerticalContentAlignment="Center" Width="280" />
                        <Label Content="规格型号:" FontSize="16" Height="34" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Width="110" />
                        <TextBox FontSize="20" Height="34" Name="textBoxSpecifications" VerticalContentAlignment="Center" Width="280" />
                    </StackPanel>
                    
                    <StackPanel Width="800" Height="37" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="生产日期/批号:" FontSize="16" Height="34" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Width="125" />
                        <TextBox FontSize="20" Height="34" IsEnabled="False" Name="textBoxProductionDate" VerticalContentAlignment="Center" Width="280" />
                        <Label Content="商标:" FontSize="16" Height="34" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Width="110" />
                        <TextBox FontSize="20" Height="34" Name="textBoxTrademark" VerticalContentAlignment="Center" Width="280" />
                    </StackPanel>
                    <StackPanel Width="800" Height="37" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="抽样日期:" FontSize="16" Height="35" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Width="125" />
                        <TextBox FontSize="20" Height="34" Name="textBoxSamplingData" VerticalContentAlignment="Center" Width="280" IsEnabled="False" />
                        <Label Content="抽样数量:" FontSize="16" Height="35" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Width="110" />
                        <TextBox FontSize="20" Height="34" Name="textBoxSampleNum" VerticalContentAlignment="Center" Width="280" TextChanged="textBoxSampleNum_TextChanged" />
                    </StackPanel>
                    <StackPanel Width="800" Height="37" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="抽样单编号:" FontSize="16" Height="34" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Width="125" />
                        <TextBox FontSize="20" Height="34" Name="textBoxSamplingCode" VerticalContentAlignment="Center" Width="280" />
                        <Label Content="样品送达日期:" FontSize="16" Height="34" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Width="110" />
                        <TextBox FontSize="20" Height="34" Name="textBoxSampleArrivalData" VerticalContentAlignment="Center" Width="250" />
                        <DatePicker FontSize="16" Height="35" Name="dtpDateTime" VerticalContentAlignment="Center" Width="30" SelectedDateChanged="dtpDateTime_SelectedDateChanged" />
                    </StackPanel>

                    <StackPanel Width="800" Height="37" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="任务来源:" FontSize="16" Height="35" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Width="125" />
                        <TextBox FontSize="20" Height="34" IsEnabled="False" Name="textBoxTaskSource" VerticalContentAlignment="Center" Width="280" />
                    </StackPanel>
                    <StackPanel Width="800" Height="70" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="备注:" FontSize="16" Height="34" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Width="125" />
                        <TextBox FontSize="20" Height="65" Name="textBoxNote" VerticalContentAlignment="Center" Width="670" />
                    </StackPanel>
                    <DataGrid AutoGenerateColumns="false" Height="220" IsReadOnly="True" ItemsSource="{Binding}" Name="DataGridRecord" Width="780" LoadingRow="DataGridRecord_LoadingRow" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Path=FoodName}" Header="样品名称" Width="200" />
                            <DataGridTextColumn Binding="{Binding Path=ProjectName}" Header="项目名称" Width="200" />
                            <DataGridTextColumn Binding="{Binding Path=Unit}" Header="单位" Width="170" />
                            <DataGridTextColumn Binding="{Binding Path=CheckData}" Header="检测数据" Width="170" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
