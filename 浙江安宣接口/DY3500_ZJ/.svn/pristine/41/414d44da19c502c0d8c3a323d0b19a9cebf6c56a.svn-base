<Window x:Class="AIO.WarnTaskShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WarnTaskShow" 
              Width="1024" Height="768"
        WindowState="Maximized"
        WindowStyle="None"
        Background="{StaticResource BackGroudColorGrid}"
        FontFamily="SimHei" 
        Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" >
    <Grid>
        <!-- 上 -->
        <Grid Margin="0,0,0,0" Height="150" VerticalAlignment="Top" Background="{StaticResource  BackGroudColorGridTop}" >
            <Image Width="150" Height="110" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/DY-Detector;component/assets/logo_v.png" Margin="0,20" />
            <Label Content="任务告警界面" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource ForeGroudColorText}"/>
        </Grid>

        <!-- 下 -->
        <Grid Margin="0,0,0,0" Height="100" VerticalAlignment="Bottom" Background="{StaticResource  BackGroudColorGridBottom}" >
            <Button Name="ButtonAddItem" Width="125" Height="60" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="40,0,00,0" Content="新建用户" FontSize="30" Click="ButtonAddItem_Click" Visibility="Hidden" />
            <Button Name="ButtonEditItem" Width="125" Height="60" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="180,0,0,0"  Content="编辑用户" FontSize="30" Click="ButtonEditItem_Click" Visibility="Hidden" />
            <Button Name="ButtonDelItem" Width="125" Height="60" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="320,0,00,0"  Content="删除用户" FontSize="30" Click="ButtonDelItem_Click" Visibility="Hidden" />
            <Button Name="ButtonPrev" Width="100" Height="60" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,20,20,20"  Content="返  回" FontSize="24" Click="ButtonPrev_Click"/>
        </Grid>

        <!-- 中 -->
        <Grid Margin="0,150,0,100" Background="{StaticResource BackGroudColorGridCenter}">
            <WrapPanel Name="WrapPanelItem" />
        </Grid>
    </Grid>
</Window>