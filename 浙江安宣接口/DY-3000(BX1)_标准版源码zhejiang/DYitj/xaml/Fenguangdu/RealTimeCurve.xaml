<Window x:Class="AIO.xaml.Fenguangdu.RealTimeCurve"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        Title="实时曲线图谱" Height="325" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Icon="/DY-Detector;component/assets/Curve.png"
        Closing="Window_Closing">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="296" VerticalAlignment="Top" Width="444">
            <TabItem Header="吸光度">
                <Grid Background="#FFE5E5E5">
                    <d3:ChartPlotter x:Name="plotter_xgd" Margin="0,3,0,0">
                        <d3:ChartPlotter.VerticalAxis>
                            <d3:VerticalIntegerAxis />
                        </d3:ChartPlotter.VerticalAxis>

                        <d3:ChartPlotter.HorizontalAxis>
                            <d3:HorizontalIntegerAxis />
                        </d3:ChartPlotter.HorizontalAxis>

                        <d3:Header Name="xgdValue" Content="吸光度实时曲线"/>
                        <d3:VerticalAxisTitle Content="吸光度"/>
                        <d3:HorizontalAxisTitle Content="时间轴(S)" />
                    </d3:ChartPlotter>
                </Grid>
            </TabItem>
            <TabItem Header="透光率">
                <Grid Background="#FFE5E5E5">
                    <Grid Background="#FFE5E5E5">
                        <d3:ChartPlotter x:Name="plotter_tgl" Margin="0,3,0,0">
                            <d3:ChartPlotter.VerticalAxis>
                                <d3:VerticalIntegerAxis />
                            </d3:ChartPlotter.VerticalAxis>

                            <d3:ChartPlotter.HorizontalAxis>
                                <d3:HorizontalIntegerAxis />
                            </d3:ChartPlotter.HorizontalAxis>

                            <d3:Header Name="tglValue" Content="透光率实时曲线"/>
                            <d3:VerticalAxisTitle Content="透光率"/>
                            <d3:HorizontalAxisTitle Content="时间轴(S)" />
                        </d3:ChartPlotter>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="光度能量" Name="gdnl">
                <Grid Background="#FFE5E5E5">
                    <d3:ChartPlotter x:Name="plotter_gdnl" Margin="0,3,0,0">
                        <d3:ChartPlotter.VerticalAxis>
                            <d3:VerticalIntegerAxis />
                        </d3:ChartPlotter.VerticalAxis>

                        <d3:ChartPlotter.HorizontalAxis>
                            <d3:HorizontalIntegerAxis />
                        </d3:ChartPlotter.HorizontalAxis>

                        <d3:Header Name="gdnlValue" Content="光度能量实时曲线"/>
                        <d3:VerticalAxisTitle Content="光度能量"/>
                        <d3:HorizontalAxisTitle Content="时间轴(S)" />
                    </d3:ChartPlotter>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
