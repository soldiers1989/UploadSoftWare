                                            </Grid>
                                        </Grid>
                                    </TabItem>
                                    <TabItem Width="0" Height="0">
                                        <Grid Height="400" Width="450" Visibility="Visible">
                                            <Grid Height="120" Width="450" Margin="0,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <Label FontSize="20" Content="名称" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1"/>
                                                <Label FontSize="20" Content="系数" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="2"/>
                                                <Label FontSize="20" Content="FROM" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="3"/>
                                                <Label FontSize="20" Content="TO" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="4"/>
                                                <Label FontSize="20" Content="子项目1" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0"/>
                                                <Label FontSize="20" Content="子项目2" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0"/>
                                                <ComboBox x:Name="ComboBoxCIItem1Name" Margin="5,3,5,3" FontSize="20" Text="钾" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" IsEditable="True" />
                                                <TextBox x:Name="TextBoxCIItem1Rate" Margin="5,3,5,3" FontSize="20" Text="2" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2" />
                                                <TextBox x:Name="TextBoxCIItem1From" Margin="5,3,5,3" FontSize="20" Text="2" VerticalAlignment="Center" Grid.Row="1" Grid.Column="3" />
                                                <TextBox x:Name="TextBoxCIItem1To" Margin="5,3,5,3" FontSize="20" Text="2" VerticalAlignment="Center" Grid.Row="1" Grid.Column="4" />
                                                <ComboBox x:Name="ComboBoxCIItem2Name" Margin="5,3,5,3" FontSize="20" Text="铝" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" IsEditable="True" />
                                                <TextBox x:Name="TextBoxCIItem2Rate" Margin="5,3,5,3" FontSize="20" Text="2" VerticalAlignment="Center" Grid.Row="2" Grid.Column="2" />
                                                <TextBox x:Name="TextBoxCIItem2From" Margin="5,3,5,3" FontSize="20" Text="2" VerticalAlignment="Center" Grid.Row="2" Grid.Column="3" />
                                                <TextBox x:Name="TextBoxCIItem2To" Margin="5,3,5,3" FontSize="20" Text="2" VerticalAlignment="Center" Grid.Row="2" Grid.Column="4" />
                                            </Grid>
                                            <Grid Height="40" Width="450" VerticalAlignment="Top" Margin="0,160,0,0" >
                                                <Label  Width="100"  Margin="0,0,0,0" FontSize="20" Content="国标值" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                                <Label  Width="60"  Margin="140,0,0,0" FontSize="20" Content="下限:" VerticalAlignment="Center" HorizontalAlignment="Left" HorizontalContentAlignment="Right"/>
                                                <TextBox x:Name="TextBoxCILLevel" Width="60"  Margin="200,0,0,0" FontSize="20" Text="2" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                                <Label  Width="60"  Margin="270,0,0,0" FontSize="20" Content="上限:" VerticalAlignment="Center" HorizontalAlignment="Left" HorizontalContentAlignment="Right"/>
                                                <TextBox x:Name="TextBoxCIHLevel" Width="60"  Margin="330,0,0,0" FontSize="20" Text="2" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                            </Grid>
                                        </Grid>
                                    </TabItem>
                                    <TabItem Width="0" Height="0">
                                        <Grid Height="400" Width="450" Visibility="Visible">
                                            <Grid Height="40" Width="450" VerticalAlignment="Top" Margin="0,0,0,0" >
