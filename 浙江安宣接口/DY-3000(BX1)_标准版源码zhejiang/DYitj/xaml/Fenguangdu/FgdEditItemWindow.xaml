                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    <Label FontSize="20" Content="x^0" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1"/>
                                                    <Label FontSize="20" Content="x^1" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="2"/>
                                                    <Label FontSize="20" Content="x^2" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="3"/>
                                                    <Label FontSize="20" Content="x^3" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="4"/>
                                                    <Label FontSize="20" Content="FROM" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="5"/>
                                                    <Label FontSize="20" Content="TO" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="6"/>
                                                    <Label FontSize="20" Content="A" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0"/>
                                                    <Label FontSize="20" Content="B" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0"/>
                                                    <TextBox x:Name="TextBoxSCA0" Margin="5,3,5,3" FontSize="20" Text="0" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" />
                                                    <TextBox x:Name="TextBoxSCA1" Margin="5,3,5,3" FontSize="20" Text="1" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2" />
                                                    <TextBox x:Name="TextBoxSCA2" Margin="5,3,5,3" FontSize="20" Text="0" VerticalAlignment="Center" Grid.Row="1" Grid.Column="3" />
                                                    <TextBox x:Name="TextBoxSCA3" Margin="5,3,5,3" FontSize="20" Text="0" VerticalAlignment="Center" Grid.Row="1" Grid.Column="4" />
                                                    <TextBox x:Name="TextBoxSCAFROM" Margin="5,3,5,3" FontSize="20" Text="0" VerticalAlignment="Center" Grid.Row="1" Grid.Column="5" />
                                                    <TextBox x:Name="TextBoxSCATO" Margin="5,3,5,3" FontSize="20" Text="0" VerticalAlignment="Center" Grid.Row="1" Grid.Column="6" />
                                                    <TextBox x:Name="TextBoxSCB0" Margin="5,3,5,3" FontSize="20" Text="0" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" />
                                                    <TextBox x:Name="TextBoxSCB1" Margin="5,3,5,3" FontSize="20" Text="1" VerticalAlignment="Center" Grid.Row="2" Grid.Column="2" />
                                                    <TextBox x:Name="TextBoxSCB2" Margin="5,3,5,3" FontSize="20" Text="0" VerticalAlignment="Center" Grid.Row="2" Grid.Column="3" />
                                                    <TextBox x:Name="TextBoxSCB3" Margin="5,3,5,3" FontSize="20" Text="0" VerticalAlignment="Center" Grid.Row="2" Grid.Column="4" />
                                                    <TextBox x:Name="TextBoxSCBFROM" Margin="5,3,5,3" FontSize="20" Text="0" VerticalAlignment="Center" Grid.Row="2" Grid.Column="5" />
                                                    <TextBox x:Name="TextBoxSCBTO" Margin="5,3,5,3" FontSize="20" Text="0" VerticalAlignment="Center" Grid.Row="2" Grid.Column="6" />
                                                </Grid>
                                            </Grid>
                                            <Grid Height="40" Width="450" VerticalAlignment="Top" Margin="0,260,0,0" >
                                                <Label  Width="100"  Margin="0,0,0,0" FontSize="20" Content="校正曲线" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                                <Label  Width="60"  Margin="140,0,0,0" FontSize="20" Content="A:" VerticalAlignment="Center" HorizontalAlignment="Left" HorizontalContentAlignment="Right"/>
                                                <TextBox x:Name="TextBoxSCCCA" Width="60"  Margin="200,0,0,0" FontSize="20" Text="1" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                                <Label  Width="60"  Margin="270,0,0,0" FontSize="20" Content="B:" VerticalAlignment="Center" HorizontalAlignment="Left" HorizontalContentAlignment="Right"/>
                                                <TextBox x:Name="TextBoxSCCCB" Width="60"  Margin="330,0,0,0" FontSize="20" Text="0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                            </Grid>
                                            <Grid Visibility="Collapsed" Height="40" Width="450" VerticalAlignment="Top" Margin="0,260,0,0" >
                                                <CheckBox x:Name="CheckBoxSCIsReverse" Content="使用褪色法" Margin="10" FontSize="20" VerticalAlignment="Center" />
                                            </Grid>
                                            <Grid Height="40" Width="450" VerticalAlignment="Top" Margin="0,300,0,0" >
                                                <Label  Width="100"  Margin="0,0,0,0" FontSize="20" Content="国标值" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                                <Label  Width="60"  Margin="140,0,0,0" FontSize="20" Content="下限:" VerticalAlignment="Center" HorizontalAlignment="Left" HorizontalContentAlignment="Right"/>
                                                <TextBox x:Name="TextBoxSCLLevel" Width="60"  Margin="200,0,0,0" FontSize="20" Text="0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                                <Label  Width="60"  Margin="270,0,0,0" FontSize="20" Content="上限:" VerticalAlignment="Center" HorizontalAlignment="Left" HorizontalContentAlignment="Right"/>
                                                <TextBox x:Name="TextBoxSCHLevel" Width="60"  Margin="330,0,0,0" FontSize="20" Text="0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                            </Grid>
                                            <Grid Visibility="Collapsed" Height="40" Width="450" VerticalAlignment="Top" Margin="0,205,0,0" >
                                                <Label  Width="29"  Margin="21,4,0,4" FontSize="20" Content="C" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                                <TextBox IsReadOnly="true" x:Name="TextBoxSCC0" Width="54"  Margin="67,9,0,7" FontSize="20" Text="0" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                                <TextBox IsReadOnly="true" x:Name="TextBoxSCC1" Width="54"  Margin="133,10,0,6" FontSize="20" Text="0" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                                <TextBox IsReadOnly="true" x:Name="TextBoxSCC2" Width="54"  Margin="197,10,0,6" FontSize="20" Text="0" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                                <TextBox IsReadOnly="true" x:Name="TextBoxSCC3" Width="54"  Margin="263,10,0,6" FontSize="20" Text="0" VerticalAlignment="Center" HorizontalAlignment="Left" />
