<Window x:Class="AIO.xaml.Dialog.SearchItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="项目检索" Height="400" Width="400" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" Loaded="Window_Loaded"
        Icon="/DY-Detector;component/assets/logo_v.png">
    <Grid>
        <Label Content="项目名称" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="94,17,0,0" Name="txt" VerticalAlignment="Top" Width="135" />
        <Button Content="查询" FontSize="20" Height="40" Margin="244,5,0,0" Name="Search" VerticalAlignment="Top" Width="70" Click="Search_Click" HorizontalAlignment="Left" />
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding}" Margin="0,51,0,0" Name="DataGridRecord" LoadingRow="DataGridRecord_LoadingRow" FontSize="16">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="项目名称" Width="200" />
                <DataGridTextColumn Binding="{Binding Type}" Header="检测手段" Width="200" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
