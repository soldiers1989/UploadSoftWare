<Window x:Class="AIO.xaml.KjService.TaskMsg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TaskMsg"  Width="1024" Height="768"
        WindowState="Maximized"
        WindowStyle="None"
        Background="{StaticResource BackGroudColorGrid}"
        FontFamily="SimHei" 
        Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" >
    <Grid>

        <!-- 上 -->
        <Grid Margin="0,0,0,0" Height="150" VerticalAlignment="Top" Background="{StaticResource  BackGroudColorGridTop}" >
            <Image Width="150" Height="110" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/DY-Detector;component/assets/logo_v.png" Margin="15,20" />
            <Label Content="快检云服务公告查询系统" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource ForeGroudColorText}"/>
            <Label Content="" FontSize="20" Foreground="{StaticResource ForeGroudColorText}" HorizontalAlignment="Right" x:Name="LabelInfo" VerticalAlignment="Bottom" Width="200" Margin="0,0,6,0" />
        </Grid>

        <!-- 下 -->
        <Grid Margin="0,0,0,0" Height="100" VerticalAlignment="Bottom" Background="{StaticResource  BackGroudColorGridBottom}" >
            <Button Name="Btn_Refresh" Height="60" VerticalAlignment="Center" Margin="20,20,0,20" Content="刷  新" FontSize="24" Click="Btn_Refresh_Click" HorizontalAlignment="Left" Width="100" />
            <Button Name="Btn_Show" Height="60" VerticalAlignment="Center" Margin="125,20,0,20" Content="查看详情" FontSize="24" Click="Btn_Show_Click" HorizontalAlignment="Left" Width="100" />
            <Button Name="Btn_Exit" Width="100" Height="60" VerticalAlignment="Center" Content="返  回"  HorizontalAlignment="Right" FontSize="24" Click="Btn_Exit_Click" Margin="0,20,10,20" />
        </Grid>

        <!-- 中 -->
        <Grid Margin="0,150,0,100" Background="{StaticResource BackGroudColorGridCenter}">
            <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                <StackPanel VerticalAlignment="Center" Orientation="Vertical" Margin="12,0" Height="36">
                    <Grid Height="35">
                        <StackPanel Width="1000" Height="30"  Margin="0,2,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" >
                            <StackPanel Height="30"  HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" >
                                <Label FontSize="16" Content="任务编号" Height="30" VerticalContentAlignment="Center" />
                                <TextBox Name="Txt_TaskCode" Width="135" FontSize="16" Height="25" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" />
                            </StackPanel>
                            <StackPanel Height="30"  Margin="10,0,0,0" Orientation="Horizontal" >
                                <Label FontSize="16" Content="任务标题" Height="30" VerticalContentAlignment="Center"  />
                                <TextBox Name="Txt_TaskTitle" Width="135" FontSize="16" Height="25" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" />
                            </StackPanel>
                            <StackPanel Height="30"  Margin="10,0,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" >
                                <Label FontSize="16" Content="任务内容" Height="30" VerticalContentAlignment="Center" />
                                <TextBox Name="Txt_TaskContent" Width="135" FontSize="16" Height="25" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" />
                            </StackPanel>
                            <StackPanel Height="30"  Margin="10,0,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" />
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <DataGrid Name="DataGridRecord" Height="480" ItemsSource="{Binding}" AutoGenerateColumns="false" IsReadOnly="True" SelectionChanged="DataGridRecord_SelectionChanged" MouseDoubleClick="DataGridRecord_MouseDoubleClick" LoadingRow="DataGridRecord_LoadingRow" FontSize="16" Margin="12,0" SelectionMode="Single" >
                    <DataGrid.ContextMenu>
                        <ContextMenu Name="DataGridMenu" StaysOpen="true">
                            <MenuItem Name="miRefresh" Click="Btn_Refresh_Click" Header="刷新"/>
                            <MenuItem Name="miShow" Click="Btn_Show_Click" Header="查看详情" />
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="id" Binding="{Binding Path = id}" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="下发人ID" Binding="{Binding Path = from_user_id}" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="接收人ID" Binding="{Binding Path = to_user_id}" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="发送类型,0发送给个人,1发送给机构,2发送检测点" Binding="{Binding Path = to_user_type}" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="公告标题" Binding="{Binding Path = title}" Width="200"/>
                        <DataGridTextColumn Header="公告内容" Binding="{Binding Path = content}" Width="210"/>
                        <DataGridTextColumn Header="下发人" Binding="{Binding Path = from_user_name}" Width="120"/>
                        <DataGridTextColumn Header="下发时间" Binding="{Binding Path = sendtime}" Width="175"/>
                        <DataGridTextColumn Header="附件地址" Binding="{Binding Path = file_path}" Width="150"/>
                        <DataGridTextColumn Header="附件名称" Binding="{Binding Path = file_name}" Width="150"/>
                        <DataGridTextColumn Header="接收机构ID" Binding="{Binding Path = group_id}" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="接收检测点ID" Binding="{Binding Path = group_point_id}" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="接收公告ID" Binding="{Binding Path = log_id}" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="读取状态" Binding="{Binding Path = log_read_status}" Width="80" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="读取时间" Binding="{Binding Path = log_read_time}" Width="80" Visibility="Collapsed"/>
                    </DataGrid.Columns>
                </DataGrid>

            </StackPanel>
        </Grid>

    </Grid>
</Window>
