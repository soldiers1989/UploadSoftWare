        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="系统提示" Height="200" Width="400" Icon="/DY-Detector;component/assets/logo_v.png"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <RichTextBox Name="Txt_ErrorInfo" Margin="10,10,10,45">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Content="详细信息" FontSize="16" Name="Btn_ErrorDetail" HorizontalAlignment="Right" Margin="0,0,88,10" Width="75" Click="Btn_ErrorDetail_Click" Height="26" VerticalAlignment="Bottom"/>
        <Button Content="确   定" FontSize="16" Name="Btn_Close" HorizontalAlignment="Right" Margin="0,0,8,10" Width="75" Click="Btn_Close_Click" Height="26" VerticalAlignment="Bottom"/>

    </Grid>
</Window>