<Window x:Class="AIO.xaml.Dialog.SearchCompanyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="被检单位" Height="400" Width="500" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" Loaded="Window_Loaded"
        Icon="/DY-Detector;component/assets/logo_v.png">
    <Grid>
        <Label Content="被检单位" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="23,13,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="97,15,0,0" Name="textBoxName" VerticalAlignment="Top" Width="155" SelectionChanged="textBoxName_SelectionChanged" />
        <Button Content="查询" FontSize="20" Height="40" HorizontalAlignment="Left" Margin="258,6,0,0" Name="SearchCompany" VerticalAlignment="Top" Width="100" Click="SearchCompany_Click" />
        <Button Content="选择" FontSize="20" Height="40" HorizontalAlignment="Left" Margin="383,6,0,0" Name="Choose" VerticalAlignment="Top" Width="100" Click="Choose_Click" />
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding}" Margin="0,52,0,-1" Name="DataGridRecord" MouseDoubleClick="DataGridRecord_MouseDoubleClick" LoadingRow="DataGridRecord_LoadingRow" FontSize="16">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=marketName}" Header="被检单位名称" Width="120" />
                <DataGridTextColumn Binding="{Binding Path=marketCode}" Header="市场编号" />
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid Visibility="Collapsed"  AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding}" Margin="0,52,0,-1" Name="DataGridSelf" MouseDoubleClick="DataGridRecord_MouseDoubleClick" LoadingRow="DataGridRecord_LoadingRow" FontSize="16">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=marketName}" Header="被检单位名称" Width="120" />
                <DataGridTextColumn Binding="{Binding Path=marketCode}" Header="市场编号" />
                <DataGridTextColumn Binding="{Binding Path=contactNum}" Header="联系电话" />
                <DataGridTextColumn Binding="{Binding Path=address}" Header="市场地址" />
                <DataGridTextColumn Binding="{Binding Path=chargePerson}" Header="负责人" />
                <DataGridTextColumn Binding="{Binding Path=shopPeoperty}" Header="经营范围" />
                <DataGridTextColumn Binding="{Binding Path=marketType}" Header="市场类型" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
