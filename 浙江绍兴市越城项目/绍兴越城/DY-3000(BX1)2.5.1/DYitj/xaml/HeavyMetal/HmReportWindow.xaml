<Window x:Class="AIO.xaml.HeavyMetal.HmReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HmReportWindow"
        Width="1024" Height="768"
        WindowState="Maximized"
        WindowStyle="None"
        Background="{StaticResource BackGroudColorGrid}"
        FontFamily="SimHei" 
        Loaded="Window_Loaded" Closing="Window_Closing"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" >
    <Grid>
        <!-- 上 -->
        <Grid Margin="0,0,0,0" Height="150" VerticalAlignment="Top" Background="{StaticResource  BackGroudColorGridTop}" >
            <Image Width="150" Height="110" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/DY-Detector;component/assets/logo_v.png" Margin="15,20" />
            <Label Content="曲线图" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource ForeGroudColorText}"/>
            <Label Content="信息:" FontSize="20" Foreground="{StaticResource ForeGroudColorText}" HorizontalAlignment="Right" Margin="0,0,51,26" Name="LabelInfo" VerticalAlignment="Bottom" Width="160" />
        </Grid>

        <!-- 下 -->
        <Grid Margin="0,0,0,0" Height="100" VerticalAlignment="Bottom" Background="{StaticResource  BackGroudColorGridBottom}" >
            <Button Name="ButtonPrint" Width="100" Height="60" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,20,0,20"  Content="打  印" FontSize="24" Click="ButtonPrint_Click" />
            <Button Name="ButtonPrev" Width="100" Height="60" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,20,20,20"  Content="返  回" FontSize="24" Click="ButtonPrev_Click"/>
            <Button Content="保  存" FontSize="24" Height="60" HorizontalAlignment="Left" Margin="126,20,0,20" Name="btn_Save" VerticalAlignment="Center" Width="100" Click="btn_Save_Click" Visibility="Collapsed" />
            <Button Content="上  传" FontSize="24" Height="60" HorizontalAlignment="Left" Margin="126,20,0,20" Name="btn_upload" VerticalAlignment="Center" Width="100" Click="btn_upload_Click" />
        </Grid>

        <!-- 中 -->
        <Grid Margin="0,150,0,100" Background="{StaticResource BackGroudColorGridCenter}">
            <StackPanel Width="800" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical"></StackPanel>
            <ScrollViewer Width="800" Height="450" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <WrapPanel Name="WrapPanelChannel" Width="760" Height="450">
                </WrapPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
