<Window x:Class="AIO.xaml.KjService.SearchReceiveTasks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="任务查询选择" Height="400" Width="480" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" Loaded="Window_Loaded"
        Icon="/DY-Detector;component/assets/logo_v.png">
    
    <Grid>
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding}" Margin="0,51,0,0" Name="DataGridRecord" SelectionChanged="DataGridRecord_SelectionChanged" MouseDoubleClick="DataGridRecord_MouseDoubleClick" LoadingRow="DataGridRecord_LoadingRow" FontSize="16" SelectionMode="Single">
            <DataGrid.ContextMenu>
                <ContextMenu Name="DataGridMenu" StaysOpen="true">
                    <MenuItem Name="miSelected" Click="Selected_Click" Header="选择"/>
                    <MenuItem Name="miSearch" Click="Search_Click" Header="刷新"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Header="检测项目" Binding="{Binding Path = d_item}" />
                <DataGridTextColumn Header="检测样品" Binding="{Binding Path = d_sample}" />
                <DataGridTextColumn Header="任务标题" Binding="{Binding Path = t_task_title}"/>
                <DataGridTextColumn Header="发布日期" Binding="{Binding Path = t_task_cdate}"/>
                <DataGridTextColumn Header="主任务ID" Binding="{Binding Path = t_id}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="任务编号" Binding="{Binding Path = t_task_code}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="任务内容" Binding="{Binding Path = t_task_content}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="二级分发任务父ID" Binding="{Binding Path = t_task_detail_pId}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="归属项目ID" Binding="{Binding Path = t_project_id}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="任务类型" Binding="{Binding Path = t_task_type}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="任务来源" Binding="{Binding Path = t_task_source}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="任务状态" Binding="{Binding Path = t_task_status}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="任务数量" Binding="{Binding Path =  d_task_total}"/>
                <DataGridTextColumn Header="已完成数量" Binding="{Binding Path = t_sample_number}"/>
                <DataGridTextColumn Header="起始日期" Binding="{Binding Path = t_task_sdate}"/>
                <DataGridTextColumn Header="结束日期" Binding="{Binding Path = t_task_edate}"/>
                <DataGridTextColumn Header="警报时间" Binding="{Binding Path = t_task_pdate}"/>
                <DataGridTextColumn Header="完成日期" Binding="{Binding Path = t_task_fdate}"/>
                <DataGridTextColumn Header="发布任务组织ID" Binding="{Binding Path = t_task_departId}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="发布任务人ID" Binding="{Binding Path = t_task_announcer}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="备注" Binding="{Binding Path = t_remark}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="查看状态" Binding="{Binding Path = t_view_flag}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="删除状态" Binding="{Binding Path = t_delete_flag}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="附件" Binding="{Binding Path = t_file_path}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="创建人id" Binding="{Binding Path = t_create_by}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="创建时间" Binding="{Binding Path = t_create_date}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="修改人id" Binding="{Binding Path = t_update_by}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="修改时间" Binding="{Binding Path = t_update_date}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="任务明细ID" Binding="{Binding Path = d_id}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="主任务ID" Binding="{Binding Path = d_task_id}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="任务明细编号" Binding="{Binding Path = d_detail_code}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="检测样品ID" Binding="{Binding Path = d_sample_id}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="检测项目ID" Binding="{Binding Path = d_item_id}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="完成日期" Binding="{Binding Path = d_task_fdate}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="接收检测机构ID" Binding="{Binding Path = d_receive_pointid}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="接收检测机构名称" Binding="{Binding Path = d_receive_point}"/>
                <DataGridTextColumn Header="接收检测点ID" Binding="{Binding Path = d_receive_nodeid}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="接收检测点" Binding="{Binding Path = d_receive_node}"/>
                <DataGridTextColumn Header="任务接收人ID" Binding="{Binding Path = d_receive_userid}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="任务接收人名称" Binding="{Binding Path = d_receive_username}"/>
                <DataGridTextColumn Header="接收状态" Binding="{Binding Path = d_receive_status}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="任务数量总数" Binding="{Binding Path = t_task_total}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="已抽检数量" Binding="{Binding Path = d_sample_number}" Visibility="Collapsed"/>
                <DataGridTextColumn Header="备注" Binding="{Binding Path = d_remark}" Visibility="Collapsed"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="任务主题" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="3,12,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="82,14,0,0" Name="txtVal" VerticalAlignment="Top" Width="150" />
        <Button Content="查询" FontSize="20" Height="40" HorizontalAlignment="Left" Margin="238,5,0,0" Name="Btn_Search" VerticalAlignment="Top" Width="100" Click="Search_Click" />
        <Button Content="选择" FontSize="20" Height="40" HorizontalAlignment="Right" Margin="0,5,12,0" Name="Btn_Selected" VerticalAlignment="Top" Width="100" Click="Selected_Click" />
    </Grid>
</Window>