<Window x:Class="AIO.xaml.Dialog.SearchCompanyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="请选择 - 被检单位" Height="400" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded" Icon="/DY-Detector;component/app_icon.ico">
    <Grid>
        <Label Content="被检单位" Height="28" HorizontalAlignment="Left" Margin="9,13,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="73,15,0,0" Name="textBoxName" VerticalAlignment="Top" Width="165" SelectionChanged="textBoxName_SelectionChanged" />
        <Button Content="查  询" Height="40" HorizontalAlignment="Left" FontSize="20" Margin="244,6,0,0" Name="SearchCompany" VerticalAlignment="Top" Width="70" Click="SearchCompany_Click" />
        <Button Content="选  择" Height="40" HorizontalAlignment="Left" FontSize="20" Margin="320,6,0,0" Name="Choose" VerticalAlignment="Top" Width="70" Click="Choose_Click" />
        <!--<Button Content="更  新" FontSize="20" Height="40" HorizontalAlignment="Left" Margin="396,6,0,0" Name="btn_update" VerticalAlignment="Top" Width="70" Click="btn_update_Click" />-->
        <DataGrid  AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding}" Margin="0,52,0,-1" Name="DataGridRecord" MouseDoubleClick="DataGridRecord_MouseDoubleClick" LoadingRow="DataGridRecord_LoadingRow" FontSize="16">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=marketName}" Header="被检单位名称" Width="120" />
                <DataGridTextColumn Binding="{Binding Path=marketCode}" Header="市场编号" />
              
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
