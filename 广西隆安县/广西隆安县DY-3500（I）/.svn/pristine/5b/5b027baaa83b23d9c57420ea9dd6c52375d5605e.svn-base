<Window x:Class="AIO.xaml.Dialog.StandardRepositoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" 
        Background="{StaticResource BackGroudColorGrid}"
        WindowState="Maximized"
        Title="StandardRepositoryWindow"
        WindowStyle="None"
        Width="1024" 
        Height="768"
        FontFamily="SimHei" 
        Loaded="Window_Loaded" >
    <Grid>

        <!-- 上 -->
        <Grid Margin="0,0,0,0" Height="150" VerticalAlignment="Top" Background="{StaticResource  BackGroudColorGridTop}" >
            <Image Width="150" Height="110" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/DY-Detector;component/assets/logo_v.png" Margin="15,20" />
            <Label Content="食品标准管理模块" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource ForeGroudColorText}" PreviewMouseDoubleClick="Label_PreviewMouseDoubleClick"/>
            <Label Name="Lb_Update" Visibility="Collapsed" Content="正在获取更新数据，请稍等···" FontSize="20" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="313"/>
            <Label Content="" Name="Label" ToolTip="检索非法路径" MouseDoubleClick="Label_MouseDoubleClick" FontSize="40" HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="{StaticResource ForeGroudColorText}" Width="150"/>
        </Grid>

        <!-- 下 -->
        <Grid Margin="0,0,0,0" Height="100" VerticalAlignment="Bottom" Background="{StaticResource  BackGroudColorGridBottom}" >
            <Button Name="ButtonPrev" Width="100" Height="60" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,20,20,20"  Content="返  回" FontSize="24" Click="ButtonPrev_Click"/>
            <Button Name="Btn_Update" Width="100" Height="60" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,20,0,20"  Content="检查更新" FontSize="24" Click="Btn_Update_Click"/>
            <Button Name="Btn_ShowPdf" Width="100" Height="60" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="115,20,0,20"  Content="查看详情" FontSize="24" Click="Btn_ShowPdf_Click"/>
            <Button Name="Btn_Del" Width="100" Height="60" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="220,20,0,20"  Content="删  除" FontSize="24" Click="Btn_Del_Click"/>
        </Grid>

        <Grid Margin="0,150,0,100" Background="{StaticResource BackGroudColorGridCenter}">
            <StackPanel Width="1024" Height="520" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Margin="-11,-6,-11,-4">
                <StackPanel Width="1000" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical" Margin="12,0">
                    <Grid Width="1000" Height="57">
                        <Label FontSize="16" Content="标准名称" Height="30" HorizontalAlignment="Left" Margin="0,14,0,0" VerticalAlignment="Top"/>
                        <TextBox Name="TxtStandard" Width="135" FontSize="16" Height="24" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="93,16,0,17" TextChanged="TxtStandard_TextChanged" />
                        <CheckBox Name="CboxGBStandard" Content="国家标准" FontSize="16" IsChecked="true" Click="CboxGBStandard_Click" HorizontalAlignment="Left" Margin="264,20,0,0" VerticalAlignment="Top"/>
                        <CheckBox Name="CboxHBStandard" Content="行业标准" FontSize="16" IsChecked="true" Click="CboxHBStandard_Click" HorizontalAlignment="Left" Margin="353,20,0,0" VerticalAlignment="Top"/>
                        <CheckBox Name="CboxDBStandard" Content="地方标准" FontSize="16" IsChecked="true" Click="CboxDBStandard_Click" HorizontalAlignment="Left" Margin="442,20,0,0" VerticalAlignment="Top"/>
                        <CheckBox Name="CboxNewUse" Content="现行" FontSize="16" IsChecked="true" Click="CboxNewUse_Click" HorizontalAlignment="Left" Margin="605,23,0,0" VerticalAlignment="Top"/>
                        <CheckBox Name="CboxInvalid" Content="作废" FontSize="16" IsChecked="true" Click="CboxInvalid_Click" HorizontalAlignment="Left" Margin="662,23,0,0" VerticalAlignment="Top"/>
                        <CheckBox Name="CboxTheUse" Content="即将实施" FontSize="16" IsChecked="true" Click="CboxTheUse_Click" HorizontalAlignment="Left" Margin="719,23,0,0" VerticalAlignment="Top"/>
                        <CheckBox Name="CboxReplaced" Content="被代替" FontSize="16" IsChecked="true" Click="CboxReplaced_Click" HorizontalAlignment="Left" Margin="807,23,0,0" VerticalAlignment="Top"/>
                        <CheckBox Name="CboxBfReplaced" Content="部分被代替" FontSize="16" IsChecked="true" Click="CboxBfReplaced_Click" HorizontalAlignment="Left" Margin="880,23,0,0" VerticalAlignment="Top"/>
                    </Grid>
                </StackPanel>
                <DataGrid Name="DataGridRecord" Width="1000" Height="425" ItemsSource="{Binding}" AutoGenerateColumns="false" IsReadOnly="True" MouseDoubleClick="DataGridRecord_MouseDoubleClick" SelectionChanged="DataGridRecord_SelectionChanged" LoadingRow="DataGridRecord_LoadingRow" FontSize="16" >
                    <DataGrid.ContextMenu>
                        <ContextMenu Name="DataGridMenu" StaysOpen="true">
                            <MenuItem Name="miShow" Click="miShow_Click" Header="查看标准详情"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Path = ID}" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="StandardID" Binding="{Binding Path = StandardID}" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="标准名称" Binding="{Binding Path = Name}" Width="400"/>
                        <DataGridTextColumn Header="标准状态" Binding="{Binding Path = State}" Width="90"/>
                        <DataGridTextColumn Header="标准类型" Binding="{Binding Path = Type}" Width="90"/>
                        <DataGridTextColumn Header="发布单位" Binding="{Binding Path = ReleaseUnit}" Width="200"/>
                        <DataGridTextColumn Header="发布时间" Binding="{Binding Path = ReleaseTime}" Width="100"/>
                        <DataGridTextColumn Header="更新时间" Binding="{Binding Path = ReleaseTime}" Width="100"/>
                        <DataGridTextColumn Header="实施时间" Binding="{Binding Path = ImplementationTime}"/>
                        <DataGridTextColumn Header="标题" Binding="{Binding Path = Title}" Visibility="Collapsed"/>
                        <!--<DataGridTextColumn Header="国家分类号" Binding="{Binding Path = TypeNum}" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="ICS分类" Binding="{Binding Path = ICSType}" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="被替代标准号" Binding="{Binding Path = BeReplacedNum}" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="代替标准号" Binding="{Binding Path =  InsteadNum}" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="归口单位" Binding="{Binding Path =AttributionUnit}" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="标准简介" Binding="{Binding Path = Introduction}" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="备注" Binding="{Binding Path = Notes}" Visibility="Collapsed"/>-->
                        <DataGridTextColumn Header="路径" Binding="{Binding Path = Path}" Visibility="Collapsed"/>
                    </DataGrid.Columns>
                </DataGrid>
                <WrapPanel Height="27" Name="wrapPanel1" Margin="12,0">
                    <Button Content="首页" FontSize="18" Height="26" Name="btnHomePage" Width="75" Click="btnHomePage_Click" />
                    <Label Content="" Height="28" Name="label5" Width="10" />
                    <Button Content="末页" FontSize="18" Height="26" Name="btnEndPage" Width="75" Click="btnEndPage_Click" />
                    <Label Content="" Height="28" Name="label4" Width="15" />
                    <Button Content="上一页" FontSize="18" Height="26" Name="btnUpPage" Width="75" Click="btnUpPage_Click" />
                    <Label Content="" Height="28" Name="label1" Width="10" />
                    <Button Content="下一页" FontSize="18" Height="26" Name="btnNextPage" Width="75" Click="btnNextPage_Click" />
                    <Label Content=" 跳转到第" FontSize="18" Height="28" Name="label2" Width="90" />
                    <TextBox Height="23" Text="1" Name="textBoxPage" FontSize="18" Width="32" TextChanged="textBoxPage_TextChanged" />
                    <Label Content="页 每页" FontSize="18" Height="28" Name="label3" Width="70" />
                    <TextBox Text="100" Height="23" Name="TxtPageSize" FontSize="18" Width="60" TextChanged="TxtPageSize_TextChanged" />
                    <Label Content="条数据" Height="28" FontSize="18" Width="65" />
                    <Label Height="28" FontSize="18" Name="labelCount" Width="348" />
                </WrapPanel>
            </StackPanel>
        </Grid>

    </Grid>
</Window>