<Window x:Class="AIO.xaml.Fenguangdu.CalculatedCurve"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="自动生成曲线" Height="500" Width="500"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>

        <Label Content="浓度1" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" />
        <TextBox Height="23" Name="nd1" TextChanged="nd1_TextChanged" HorizontalAlignment="Left" Margin="58,12,0,0" VerticalAlignment="Top" Width="100" />
        <Label Content="浓度2" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="162,10,0,0" VerticalAlignment="Top" />
        <TextBox Height="23" TextChanged="nd2_TextChanged" Name="nd2" HorizontalAlignment="Left" Margin="220,12,0,0" VerticalAlignment="Top" Width="100" />
        <Label Content="浓度3" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="324,8,0,0" VerticalAlignment="Top" />
        <TextBox Height="23" TextChanged="nd3_TextChanged" Name="nd3" HorizontalAlignment="Left" Margin="382,10,0,0" VerticalAlignment="Top" Width="100" />
        <Label Content="浓度4" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="2,52,0,0" VerticalAlignment="Top" />
        <TextBox Height="23" TextChanged="nd4_TextChanged" Name="nd4" HorizontalAlignment="Left" Margin="58,54,0,0" VerticalAlignment="Top" Width="100" />
        <Label Content="浓度5" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="163,52,0,0" VerticalAlignment="Top" />
        <TextBox Height="23" TextChanged="nd5_TextChanged" Name="nd5" HorizontalAlignment="Left" Margin="221,54,0,0" VerticalAlignment="Top" Width="100" />
        <Label Content="浓度6" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="326,52,0,0" VerticalAlignment="Top" />
        <TextBox Height="23" TextChanged="nd6_TextChanged" Name="nd6" HorizontalAlignment="Left" Margin="384,54,0,0" VerticalAlignment="Top" Width="100" />
        <Label Content="1" Name="xgd1" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="69,85,0,0" VerticalAlignment="Top" Width="88" />
        <Label Content="2" Name="xgd2" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="243,85,0,0" VerticalAlignment="Top" Width="77" />
        <Label Content="3" Name="xgd3" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="404,85,0,0" VerticalAlignment="Top" Width="78" />
        <Label Content="4" Name="xgd4" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="69,118,0,0" VerticalAlignment="Top" Width="88" />
        <Label Content="5" Name="xgd5" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="243,118,0,0" VerticalAlignment="Top" Width="77" />
        <Label Content="6" Name="xgd6" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="404,118,0,0" VerticalAlignment="Top" Width="78" />
        <Button Content="生成曲线" Name="Btn_ClacCurve" HorizontalAlignment="Left" Margin="31,151,0,0" VerticalAlignment="Top" Width="75" Click="Btn_ClacCurve_Click" Height="26"/>
        <Button Content="关闭" Name="Btn_Close" HorizontalAlignment="Left" Margin="374,151,0,0" VerticalAlignment="Top" Width="75" Click="Btn_Close_Click" Height="26"/>
        <Label Content="吸光度1:" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="2,85,0,0" VerticalAlignment="Top" />
        <Label Content="吸光度2:" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="162,85,0,0" VerticalAlignment="Top" Width="76" />
        <Label Content="吸光度3:" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="326,85,0,0" VerticalAlignment="Top" Width="73" />
        <Label Content="吸光度4:" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="2,118,0,0" VerticalAlignment="Top" />
        <Label Content="吸光度5:" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="162,118,0,0" VerticalAlignment="Top" Width="76" />
        <Label Content="吸光度6:" FontSize="16" Height="28" HorizontalAlignment="Left" Margin="326,118,0,0" VerticalAlignment="Top" Width="73" />

        <d3:ChartPlotter x:Name="plotter_xgd" Margin="0,182,0,0">
            <d3:ChartPlotter.VerticalAxis>
                <d3:VerticalIntegerAxis />
            </d3:ChartPlotter.VerticalAxis>

            <d3:ChartPlotter.HorizontalAxis>
                <d3:HorizontalIntegerAxis />
            </d3:ChartPlotter.HorizontalAxis>

            <d3:Header Content="标准曲线"/>
            <d3:VerticalAxisTitle Content="浓度"/>
            <d3:HorizontalAxisTitle Content="吸光度" />
        </d3:ChartPlotter>
    </Grid>
</Window>
