<Window x:Class="AIO.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputDialog" Height="200" Width="230" MaxHeight="200" MaxWidth="230" MinHeight="200" MinWidth="230"
        WindowStyle="None" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180*" />
            <ColumnDefinition Width="28*" />
        </Grid.ColumnDefinitions>
        <Label Name="LabelTitle" Content="请输入" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="40" Margin="10,10,0,0"  FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.ColumnSpan="2" />
        <TextBox Name="TextBoxInput" Text=""  HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="40" Margin="10,60,0,0" TextWrapping="Wrap" FontSize="20" VerticalContentAlignment="Center" KeyDown="TextBoxInput_KeyDown" Grid.ColumnSpan="2" />
        <Button Name="ButtonOK" Content="确定" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="80" Height="30" Margin="20,130,0,0" Click="ButtonOK_Click"/>
        <Button Name="ButtonCancel" Content="取消" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="30" Margin="120,130,0,0" Click="ButtonCancel_Click" Grid.ColumnSpan="2" />

    </Grid>
</Window>
