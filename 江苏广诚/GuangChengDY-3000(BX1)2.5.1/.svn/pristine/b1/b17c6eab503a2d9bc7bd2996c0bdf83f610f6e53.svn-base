<Window x:Class="AIO.xaml.Dialog.GCProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GCProjectWindow" Height="400" Width="500"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen" 
        Icon="/DY-Detector;component/assets/logo_v.png"
        >
    <Grid>
        <WrapPanel Height="50" VerticalAlignment="Top" >
            <Label Content="项目部：" Height="28" HorizontalAlignment="Left" Margin="4,13,0,0" Name="label1" VerticalAlignment="Top" />
            <TextBox Height="23" HorizontalAlignment="Left" Margin="0,15,0,0" Name="tb_project" VerticalAlignment="Top" Width="140"/>
            <Button Content="查  询" Height="35" HorizontalAlignment="Left" FontSize="20" Margin="10,6,0,0" Name="Search" VerticalAlignment="Top" Width="80" Click="Search_Click"/>
            <Button Content="选  择" Height="35" HorizontalAlignment="Left" FontSize="20" Margin="30,6,0,0" Name="Choose" VerticalAlignment="Top" Width="80" Click="Choose_Click" />
        </WrapPanel>
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding}" Margin="0,51,0,0" Name="DataGridRecord" MouseDoubleClick="DataGridRecord_MouseDoubleClick" LoadingRow="DataGridRecord_LoadingRow" FontSize="16">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=jgmc}" Header="项目部名称" Width="150" />
                <DataGridTextColumn Binding="{Binding Path=did}" Header="项目部ID" Width="120" />
               
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
