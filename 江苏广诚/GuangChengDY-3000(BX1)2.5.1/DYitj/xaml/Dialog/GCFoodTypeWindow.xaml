<Window x:Class="AIO.xaml.Dialog.GCFoodTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mode="clr-namespace:AIO.xaml.Dialog"
        Title="样品种类选择" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        Icon="/DY-Detector;component/assets/logo_v.png"
        >
    <Grid>
        <Grid  Height="320" VerticalAlignment="Top" >
            <Grid.Resources>
                <HierarchicalDataTemplate DataType="{x:Type mode:Node}" ItemsSource="{Binding Nodes}">
                    <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                        <TextBlock Text="{Binding Name}" ToolTip="{Binding Name}" Tag="{Binding}"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </Grid.Resources>
            <TreeView Name="treeView" Margin="0,0,0,0" SelectedItemChanged="treeView_SelectedItemChanged"  MouseDoubleClick="treeView_MouseDoubleClick"/>
        </Grid>
       
        <Button Content="选择" Name="Btn_Selected" HorizontalAlignment="Left" Width="83" Height="32" Margin="67,320,0,0" Click="Btn_Selected_Click"></Button>
        <Button Content="取消" Name="Btn_Close" HorizontalAlignment="Right" Width="83" Height="32" Margin="0,320,40,0" Click="Btn_Close_Click"></Button>
    </Grid>
</Window>
